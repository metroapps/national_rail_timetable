/**
 * @param ServiceCall[] $array
 * @param int $i
 * @return int
 */
function get_colspan(array $array, int $i) {
    $call = $array[$i];
    $colspan = 0;
    /** @noinspection TypeUnsafeComparisonInspection */
    while (
        isset($array[$i])
        && $array[$i]->uid === $call->uid
        && $array[$i]->timestamp == $call->timestamp
    ) {
        ++$colspan;
        ++$i;
    }
    return $colspan;
}

